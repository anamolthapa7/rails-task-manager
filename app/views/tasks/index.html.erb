<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%= form_with model: task, method: :delete, local: true do %>
          <%= submit_tag "Delete", class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this task?" } %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Create new task", task_new_path, class: 'btn btn-success' %>
</div>
