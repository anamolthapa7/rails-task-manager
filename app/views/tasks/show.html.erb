
<div class="container mt-3">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p>completed : <%= @task.completed %></p>
  <%= link_to 'Back to tasks', tasks_path, class: "btn btn-success" %>
  <%= link_to task_edit_path(@task), class: 'btn btn-light' do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
</div>
